<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio.MainPage"
             xmlns:VM="clr-namespace:Ejercicio.ViewModel">

    <ContentPage.BindingContext>
        <VM:ChatVM/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Text="{Binding Usuario}"/>

            <Entry Text="{Binding Mensaje}"/>

            <Button Command="{Binding EnviarMensajeCommand}"/>

            <ListView ItemsSource="{Binding ListaMensajes}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding NombreUsuario}"/>
                                <Label Text="Ha dicho "/>
                                <Label Text="{Binding MensajeUsuario}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
