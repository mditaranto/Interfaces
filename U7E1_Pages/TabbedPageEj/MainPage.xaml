<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabbedPageEj.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

            <Entry
                x:Name="Nombre"
                WidthRequest="60"
                HeightRequest="150"/>

            <Entry
                x:Name="Apellidos"
                WidthRequest="60"
                HeightRequest="150"/>

            <Button
                x:Name="Page4"
                Text="Pagina 4"
                Clicked="IrPage4"/>

            <Button
                x:Name="Page5"
                Text="Pagina 5"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
