<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tema11_Ej3.Views.EditarInsertarPersonasPage"
             Title="EditarInsertarPersonasPage"
             xmlns:VM="clr-namespace:Tema11_Ej3.ViewModel">

    <ContentPage.BindingContext>
        <VM:EditarInsertarPersonasPageVM />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        //Vista de un formalario para editar o insertar una persona
        <Entry x:Name="NombreEntry" Placeholder="Nombre" Text="{Binding Persona.Nombre}"/>
        <Entry x:Name="ApellidosEntry" Placeholder="Apellidos" Text="{Binding Persona.Apellido}"/>
        <Entry x:Name="TelefonoEntry" Placeholder="Telefono" Text="{Binding Persona.Telefono}"/>
        <Entry x:Name="DireccionEntry" Placeholder="Direccion" Text="{Binding Persona.Direccion}"/>
        <Entry x:Name="CiudadEntry" Placeholder="Ciudad" Text="{Binding Persona.Direccion}" />
        <Entry x:Name="FotoEntry" Placeholder="Foto" Text="{Binding Persona.Foto}"/>
        <!--<Entry x:Name="Fecha de nacimiento" Placeholder="Fecha de nacimiento" Text="{Binding Persona.FechaNacimiento}"/>-->
        <Button x:Name="GuardarButton" Text="Guardar" Clicked="{Binding AceptarCommand}" />
    </VerticalStackLayout>
</ContentPage>