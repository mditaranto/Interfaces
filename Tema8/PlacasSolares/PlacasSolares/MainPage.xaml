<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacasSolares.MainPage">
    <AbsoluteLayout>
        <Image Source="placas_solares2.jpg" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />

        <ContentView AbsoluteLayout.LayoutBounds="0.5,0.5,0.333,0.666" AbsoluteLayout.LayoutFlags="All" >

            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Frame BorderColor="Gray" CornerRadius="10" HasShadow="False" BackgroundColor="White">
                    <StackLayout>
                        <Entry Placeholder="Nombre de usuario" HorizontalOptions="FillAndExpand" />
                        <Entry Placeholder="Contraseña" IsPassword="True" HorizontalOptions="FillAndExpand" />
                        <Button Text="Iniciar sesión" Clicked="OnLoginClicked" HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </Frame>
            </StackLayout>

        </ContentView>

        
    </AbsoluteLayout>

</ContentPage>
